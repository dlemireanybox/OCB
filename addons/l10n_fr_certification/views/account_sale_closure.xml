<odoo>
    <record id="list_view_account_sale_closure" model="ir.ui.view">
        <field name="name">Account Closures</field>
        <field name="model">account.sale.closure</field>
        <field name="arch" type="xml">
            <tree create="false" import="false">
                <field name="date_closure_start"/>
                <field name="date_closure_stop"/>
                <field name="company_id"/>
                <field name="currency_id"/>
                <field name="frequency"/>
                <field name="total_interval"/>
                <field name="total_fiscal"/>
                <field name="total_beginning"/>
            </tree>
        </field>
    </record>

    <record id="form_view_account_sale_closure" model="ir.ui.view">
        <field name="name">Account Closures</field>
        <field name="model">account.sale.closure</field>
        <field name="arch" type="xml">
            <form create="false" edit="false" string="Account Closure">
                <sheet>
                <group>
                    <field name="date_closure_start"/>
                    <field name="date_closure_stop"/>
                    <field name="frequency"/>
                </group>
                <group>
                    <field name="company_id"/>
                    <field name="currency_id"/>
                </group>
                <group>
                    <field name="total_interval"/>
                    <field name="total_fiscal"/>
                    <field name="total_beginning"/>
                </group>
                <field name="move_ids"/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_list_view_account_sale_closure" model="ir.actions.act_window">
        <field name="name">Account Closures</field>
        <field name="res_model">account.sale.closure</field>
        <field name="view_type">tree</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem action="action_list_view_account_sale_closure" id="menu_account_closure" parent="account.menu_finance_configuration" sequence="90"/>

</odoo>