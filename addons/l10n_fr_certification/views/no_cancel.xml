<odoo>
        <record id="view_account_journal_form_inherit" model="ir.ui.view">
            <field name="name">view.account.journal.form.inherit</field>
            <field name="model">account.journal</field>
            <field name="inherit_id" ref="account.view_account_journal_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='show_on_dashboard']" position="after">
                    <field name="l10n_fr_b2c"/>
                </xpath>
                <xpath expr="//field[@name='update_posted']" position="replace">
                    <field name="update_posted" attrs="{'readonly': [('l10n_fr_b2c', '=', True)]}"/>
                </xpath>
            </field>
        </record>

</odoo>